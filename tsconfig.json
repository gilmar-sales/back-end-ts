{
  "compilerOptions": {
    
    "target": "ES2016",                                  
   
    "module": "commonjs",                                
    "moduleResolution": "node",                       
    "baseUrl": "./",                                  
    "paths": {
      "@controllers/*": ["src/controllers/*"]
    },
    "sourceMap": true,                                
    "outDir": "./dist",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                 
  }
}
